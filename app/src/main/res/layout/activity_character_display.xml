<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical"
	tools:context=".CharacterDisplayActivity">

	<LinearLayout
		android:id="@+id/menu_button_display"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:background="@drawable/border_line_bottom">

		<Button
			android:id="@+id/button4"
			style="@style/MyButtonBarBtnStyle"
			android:onClick="displayMainInfo"
			android:text="Main" />

		<Button
			android:id="@+id/button3"
			style="@style/MyButtonBarBtnStyle"
			android:onClick="displayInventory"
			android:text="Items" />

		<Button
			android:id="@+id/level_up_display_btn"
			style="@style/MyButtonBarBtnStyle"
			android:onClick="levelUp"
			android:text="Add Level" />

		<Button
			android:id="@+id/character_feature_display_btn"
			style="@style/MyButtonBarBtnStyle"
			android:onClick="displayCharacterFeatures"
			android:text="Features" />

	</LinearLayout>

	<android.support.v4.widget.NestedScrollView
		android:id="@+id/char_display_scrollview"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<FrameLayout
			android:id="@+id/placeholder"
			android:layout_width="match_parent"
			android:layout_height="match_parent">
		</FrameLayout>

	</android.support.v4.widget.NestedScrollView>

</LinearLayout>