<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical" >

		<Spinner
			android:id="@+id/level_up_class_spinner"
			style="@style/MySpinnerStyle" />

		<TextView
			android:id="@+id/class_feature_textView"
			style="@style/MyTextViewStyle" />

		<RadioGroup
			android:id="@+id/archetype_selection"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" >

		</RadioGroup>

		<TextView
			android:id="@+id/archetype_feature_textView"
			style="@style/MyTextViewStyle" />

		<RadioGroup
			android:id="@+id/choice_selection"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" />

		<TextView
			android:id="@+id/choice_feature_textView"
			style="@style/MyTextViewStyle" />

	</LinearLayout>

	<LinearLayout
		android:id="@+id/button_layout_level_up"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="4dp"
		android:orientation="horizontal"
		android:background="@drawable/border_line_top">

		<Button
			android:id="@+id/complete_character_btn"
			style="@style/MyButtonBarBtnStyle"
			android:onClick="completeLevelUp"
			android:text="@string/complete_char_creation" />

	</LinearLayout>

</LinearLayout>